@using PersianTools.Web.Helper
@model PersianTools.Core.PersianDateTime
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                لیست مناسبت های روز @Model.ToString("yyyy/MM/dd")
                <small>@Model.ToLongStringYMD()</small>
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                       aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">تنظیمات 1</a>
                        </li>
                        <li>
                            <a href="#">تنظیمات 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @(Html.TableFor
                <PersianTools.Core.DateMetaData>()
                .Columns(column =>
                {
                    column.Expression(p => p.Id).Title("تاریخ");
                    column.Expression(p => p.DateTypeDesc).Title("نوع مناسبت");
                    column.Expression(p => p.IsHoliDay).Title("تعطیل است؟");
                    column.Expression(p => p.Description).Title("توضیحات");

                })
                .DataSource(this.Model.DateMetaDatas)
                .ToHtml("basicTable", "table table-striped table-responsive", "", "")
            )
            

        </div>
    </div>
</div>
